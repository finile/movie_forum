<% if @movie.errors.any? %>
  <h2>We have some errors here !</h2>
  <ul>
    <% @movie.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>   
  </ul>
<% end %>

<%= form_for [:admin, @movie] do |f| %>
  
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>

  <%= f.label :year, "Year" %>
  <%= f.text_field :year %>
  
  <%= f.label :score, "Score" %>
  <%= f.text_field :score %>
  
  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>
  
  <%= f.submit %>

<% end %>